<script>
    // Konfigurasi Firebase Anda
    const firebaseConfig = {
        apiKey: "AIzaSyBA3VSLrRL6d9y0HdQM-H0Y7z2VisMHl_I",
        authDomain: "kkgmajalengka2026.firebaseapp.com",
        databaseURL: "https://kkgmajalengka2026-default-rtdb.asia-southeast1.firebasedatabase.app",
        projectId: "kkgmajalengka2026",
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();
    
    let cacheTP = [];
    let currentUser = {};

    // Fungsi Download Word dengan Proteksi Format
    function downloadWord() {
        const kls = document.getElementById('selKls').value;
        const fontBase = (kls <= 2) ? "Arial" : "Times New Roman";
        
        // Header HTML khusus untuk MS Word
        const header = `
            <html xmlns:o='urn:schemas-microsoft-com:office:office' xmlns:w='urn:schemas-microsoft-com:office:word' xmlns='http://www.w3.org/TR/REC-html40'>
            <head><meta charset='utf-8'>
            <style>
                @page Section1 {size:595.3pt 841.9pt; margin:1.5cm 1.5cm 2cm 1.5cm; mso-header-margin:35.4pt; mso-footer-margin:35.4pt; mso-paper-source:0;}
                div.Section1 {page:Section1;}
                body { font-family: '${fontBase}'; font-size: 12pt; }
                table { border-collapse: collapse; width: 100%; }
                th, td { border: 1px solid black; padding: 5px; font-family: '${fontBase}'; font-size: 11pt; }
                .kop { text-align: center; border-bottom: 4px double black; margin-bottom: 20px; }
                .soal-row { margin-bottom: 10px; clear: both; }
                .page-section { page-break-after: always; }
                h3 { text-align: center; text-transform: uppercase; }
            </style>
            </head><body><div class="Section1">`;
            
        const footer = "</div></body></html>";
        
        // Ambil isi dari area cetak
        const content = document.getElementById("printArea").innerHTML;
        const blob = new Blob(['\ufeff', header + content + footer], { type: 'application/msword' });
        
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = "Naskah_Soal_Kelas_" + kls + ".doc";
        link.click();
    }

    // Fungsi Login Dasar
    document.getElementById('btnLogin').onclick = () => {
        const u = document.getElementById('lUser').value;
        if(u.startsWith('guru') || u === 'admin') {
            document.getElementById('login-page').style.display = 'none';
            setupUser(u);
        }
    };

    function setupUser(u) {
        const selKls = document.getElementById('selKls');
        if(u === 'admin') {
            selKls.innerHTML = '<option value="1">Kelas 1</option><option value="4">Kelas 4</option>';
        } else {
            const k = u.replace('guru', '');
            selKls.innerHTML = `<option value="${k}">Kelas ${k}</option>`;
        }
        initData();
    }

    function initData() {
        const k = document.getElementById('selKls').value;
        const m = document.getElementById('selMapel').innerHTML = '<option value="Bahasa Indonesia">Bahasa Indonesia</option><option value="Matematika">Matematika</option>';
        
        // Terapkan font ke tampilan preview
        const area = document.getElementById('printArea');
        area.className = (k <= 2) ? 'font-arial' : 'font-tnr';
        
        loadFromFirebase();
    }

    function loadFromFirebase() {
        const k = document.getElementById('selKls').value;
        const m = document.getElementById('selMapel').value;
        
        db.ref('kkg_tp').on('value', s => {
            const val = s.val() ? Object.values(s.val()).filter(x => x.k == k) : [];
            cacheTP = val;
            document.getElementById('bodyTP').innerHTML = val.map(d => `<tr><td>${d.e}</td><td>${d.tp}</td><td><button onclick="deleteTP('${d.id}')">Hapus</button></td></tr>`).join('');
            document.getElementById('sTP').innerHTML = val.map(d => `<option value="${d.tp}">${d.tp}</option>`).join('');
        });

        db.ref('kkg_soal').on('value', s => {
            const val = s.val() ? Object.values(s.val()).filter(x => x.k == k) : [];
            renderCetak(val);
        });
    }

    function renderCetak(soals) {
        const k = document.getElementById('selKls').value;
        document.getElementById('p-kls-title').innerText = "KELAS " + k;
        
        // Render Kisi-kisi
        document.getElementById('p-kisi').innerHTML = soals.map((s, i) => `<tr><td>${i+1}</td><td>-</td><td>${s.tp}</td><td>${s.ind}</td><td>${s.lv}</td><td>${s.bentuk}</td></tr>`).join('');
        
        // Render Soal
        document.getElementById('p-naskah').innerHTML = soals.map((s, i) => `
            <div class="soal-row">
                <b>${i+1}. </b> ${s.tanya}<br>
                ${s.bentuk==='PG' ? `a. ${s.oa} &nbsp;&nbsp; b. ${s.ob} &nbsp;&nbsp; c. ${s.oc}` : ''}
            </div>
        `).join('');

        // Render Kunci
        document.getElementById('p-kunci').innerHTML = soals.map((s, i) => `<tr><td>${i+1}</td><td>${s.kunci}</td><td>${s.skor}</td></tr>`).join('');
    }

    function saveTP() {
        const id = Date.now();
        db.ref('kkg_tp/'+id).set({
            id, k: document.getElementById('selKls').value,
            e: document.getElementById('fElemen').value,
            tp: document.getElementById('fTp').value
        });
    }

    function saveSoal() {
        const id = Date.now();
        db.ref('kkg_soal/'+id).set({
            id, k: document.getElementById('selKls').value,
            tp: document.getElementById('sTP').value,
            ind: document.getElementById('sInd').value,
            lv: document.getElementById('sLv').value,
            bentuk: document.getElementById('sBentuk').value,
            tanya: document.getElementById('sTanya').value,
            oa: document.getElementById('oa').value,
            ob: document.getElementById('ob').value,
            oc: document.getElementById('oc').value,
            od: document.getElementById('od').value,
            kunci: document.getElementById('sKunci').value,
            skor: document.getElementById('sSkor').value
        });
    }

    function showTab(id) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.add('hidden'));
        document.getElementById('tab-'+id).classList.remove('hidden');
    }

    function updateLogo(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = e => document.getElementById('p-logo').src = e.target.result;
            reader.readAsDataURL(input.files[0]);
        }
    }

    db.ref(".info/connected").on("value", s => {
        document.getElementById('db-st').innerText = s.val() ? "● ONLINE" : "○ OFFLINE";
    });
</script>
